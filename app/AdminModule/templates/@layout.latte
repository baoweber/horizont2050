    <meta name="description" content="">

    <meta name="robots" content="{$robots}" n:ifset="$robots">

    <title>{block title|striptags|upper}Mesenfor administration{/block}</title>

    <link rel="stylesheet" href="{$basePath}/css/normalize.css">
    <link rel="stylesheet" href="{$basePath}/css/foundation.css">
    <link rel="stylesheet" href="{$basePath}/css/general_foundicons.css">
    <link rel="stylesheet" href="{$basePath}/css/style.css">

    <link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/themes/smoothness/jquery-ui.css"
          type="text/css" media="all"/>

    <script src="{$basePath}/js/vendor/custom.modernizr.js"></script>

    <script src="{$basePath}/js/tinymce/tinymce.min.js"></script>

    <script>
        tinymce.init({
            selector: "textarea"
            ,plugins: "link image"
            ,file_browser_callback: RoxyFileBrowser
            ,menubar:false
            ,statusbar: false
            ,theme: "modern"
        });

        function RoxyFileBrowser(field_name, url, type, win) {
            var roxyFileman = '{!$baseUrl}/js/tinymce/plugins/fileman/index.html';
            if (roxyFileman.indexOf("?") < 0) {
                roxyFileman += "?type=" + type;
            }
            else {
                roxyFileman += "&type=" + type;
            }
            roxyFileman += '&input=' + field_name + '&value=' + document.getElementById(field_name).value;
            tinyMCE.activeEditor.windowManager.open({
                file: roxyFileman,
                title: 'Roxy Fileman',
                width: 850,
                height: 650,
                resizable: "yes",
                plugins: "media",
                inline: "yes",
                close_previous: "no"
            }, {     window: win,     input: field_name    });
            return false;
        }

    </script>

    {block head}{/block}
</head>
<body>
<script> document.documentElement.className += ' js' </script>

<div class="row row-top-bar">
